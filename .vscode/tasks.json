      "problemMatcher": []
    },
    {
      "label": "Run Unit Tests",
      "type": "shell",
      "command": "bun",
      "args": ["test"],
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": true,
        "echo": true,
        "focus": true,
        "panel": "shared",
        "reveal": "always",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "Run Unit Tests with Coverage",
      "type": "shell",
      "command": "bun",
      "args": ["test", "--coverage"],
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": true,
        "echo": true,
        "focus": true,
        "panel": "shared",
        "reveal": "always",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "Watch Unit Tests",
      "type": "shell",
      "command": "bun",
      "args": ["test", "--watch"],
      "group": "test",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": true,
        "echo": true,
        "focus": false,
        "panel": "shared",
        "reveal": "always",
        "showReuseMessage": true
      },
      "problemMatcher": []
    },
    {
      "label": "Test Coverage Report",
      "type": "shell",
      "command": "bun",
      "args": ["test", "--coverage", "--coverage-reporter=html"],
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": true,
        "echo": true,
        "focus": true,
        "panel": "shared",
        "reveal": "always",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },

    // Health Check Tasks
    {
      "label": "Check Optimized Server Health",
      "type": "shell",
      "command": "curl",
      "args": ["-s", "http://localhost:3002/health", "|", "jq"],
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": true,
        "echo": true,
        "focus": true,
        "panel": "shared",
        "reveal": "always",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "Check Original Server Health",
      "type": "shell",
      "command": "curl",
      "args": ["-s", "http://localhost:3001/health", "|", "jq"],
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": true,
        "echo": true,
        "focus": true,
        "panel": "shared",
        "reveal": "always",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    // MCP Inspector Tasks
    {
      "label": "Debug HTTP Server with Inspector",
      "type": "shell",
      "command": "npx",
      "args": ["@modelcontextprotocol/inspector", "http://localhost:3002/mcp"],
      "group": "test",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": false,
        "echo": true,
        "focus": false,
        "panel": "shared",
        "reveal": "always",
        "showReuseMessage": true
      },
      "problemMatcher": []
    },
    {
      "label": "Debug Original HTTP Server with Inspector",
      "type": "shell",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/inspector",
        "bun",
        "run",
        "src/http-server.ts"
      ],
      "group": "test",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": false,
        "echo": true,
        "focus": false,
        "panel": "shared",
        "reveal": "always",
        "showReuseMessage": true
      },
      "problemMatcher": []
    },
    {
      "label": "Debug STDIO Server with Inspector",
      "type": "shell",
      "command": "npx",
      "args": ["@modelcontextprotocol/inspector", "bun", "run", "src/index.ts"],
      "group": "test",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": false,
        "echo": true,
        "focus": false,
        "panel": "shared",
        "reveal": "always",
        "showReuseMessage": true
      },
      "problemMatcher": []
    },
    // Build Tasks
    {
      "label": "Build Project",
      "type": "shell",
      "command": "bun",
      "args": ["run", "build"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": true,
        "echo": true,
        "focus": true,
        "panel": "shared",
        "reveal": "always",
        "showReuseMessage": false
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Type Check",
      "type": "shell",
      "command": "bun",
      "args": ["run", "type-check"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": true,
        "echo": true,
        "focus": true,
        "panel": "shared",
        "reveal": "always",
        "showReuseMessage": false
      },
      "problemMatcher": ["$tsc"]
    },
    // Utility Tasks
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "bun",
      "args": ["run", "clean"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": true,
        "echo": true,
        "focus": false,
        "panel": "shared",
        "reveal": "silent",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "Terminate All Tasks",
      "type": "shell",
      "command": "echo",
      "args": ["Terminating all tasks..."],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": false,
        "echo": false,
        "focus": false,
        "panel": "shared",
        "reveal": "never",
        "showReuseMessage": false
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "terminateAll"
    }
  ]
}
