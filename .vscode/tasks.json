      },
      "presentation": {
        "clear": true,
        "echo": true,
        "focus": true,
        "panel": "shared",
        "reveal": "always",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "Run Server Tests",
      "type": "shell",
      "command": "bun",
      "args": ["run", "tests/test-server.ts"],
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": true,
        "echo": true,
        "focus": true,
        "panel": "shared",
        "reveal": "always",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "Run Comparison Tests",
      "type": "shell",
      "command": "bun",
      "args": ["run", "tests/test-comparison.ts"],
      "group": "test",
