{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start HTTP Server (Development)",
      "type": "shell",
      "command": "bun",
      "args": ["--watch", "src/http-server.ts"],
      "group": "build",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": false,
        "echo": true,
        "focus": false,
        "panel": "shared",
        "reveal": "always",
        "showReuseMessage": true
      },
      "problemMatcher": []
    },
    {
      "label": "Start STDIO Server (Development)",
      "type": "shell",
      "command": "bun",
      "args": ["--watch", "src/index.ts"],
      "group": "build",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": false,
        "echo": true,
        "focus": false,
        "panel": "shared",
        "reveal": "always",
        "showReuseMessage": true
      },
      "problemMatcher": []
    },
    // Test Tasks
    {
