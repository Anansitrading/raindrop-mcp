{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug STDIO Server with Inspector",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "npx",
      "cwd": "${workspaceFolder}",
      "args": [
        "-y",
        "@modelcontextprotocol/inspector",
        "node",
        "--inspect-brk",
        "build/index.js"
      ],
      "preLaunchTask": "Build Project",
      "console": "integratedTerminal"
    },
    {
      "name": "Debug HTTP Server with Inspector",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "cwd": "${workspaceFolder}",
      "args": [
        "-y",
        "@modelcontextprotocol/inspector",
        "node",
        "build/server.js"
      ],
      "envFile": "${workspaceFolder}/.env",
      "env": {},
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "stopOnEntry": false,
      "preLaunchTask": "Build Project"
    }
  ]
}
