{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug STDIO Server with Inspector",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "npx",
      "cwd": "${workspaceFolder}",
      "args": [
        "-y",
        "@modelcontextprotocol/inspector",
        "node",
        "--inspect-brk",
        "src/index.js"
      ],
      "preLaunchTask": "Bun Build",
      "console": "integratedTerminal"
    }
  ]
}
