{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug MCP STDIO Server",
      "program": "${workspaceFolder}/build/index.js",
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "sourceMaps": true,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug STDIO mcp server with inspector",
      "runtimeExecutable": "npx",
      "args": [
        "@modelcontextprotocol/inspector",
        "node",
        "${workspaceFolder}/build/index.js"
      ],
      "cwd": "${workspaceFolder}"
    }
  ]
}
