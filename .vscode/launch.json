{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "bun",
      "request": "launch",
      "name": "Debug Current File",
      "program": "${file}",
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {},
      "strictEnv": false,
      "watchMode": false,
      "stopOnEntry": false,
      "noDebug": false,
      "runtime": "bun",
      "runtimeArgs": []
    },
    {
      "type": "bun",
      "request": "launch",
      "name": "Debug MCP Server (STDIO)",
      "program": "${workspaceFolder}/src/index.ts",
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {},
      "stopOnEntry": false
    },

    {
      "type": "bun",
      "request": "launch",
      "name": "Debug HTTP Server",
      "program": "${workspaceFolder}/src/http-server.ts",
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {},
      "stopOnEntry": false
    },
    {
      "type": "bun",
      "request": "launch",
      "name": "Run Test Suite",
      "program": "${workspaceFolder}/tests/index.ts",
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {},
      "stopOnEntry": false
    },
    {
      "type": "bun",
      "request": "launch",
      "name": "Run Server Tests",
      "program": "${workspaceFolder}/tests/test-server.ts",
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {},
      "stopOnEntry": false
    },
    {
      "type": "bun",
      "request": "launch",
      "name": "Run Unit Tests with Debug",
      "program": "${workspaceFolder}/node_modules/.bin/bun",
      "args": ["test", "--watch"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test"
      },
      "stopOnEntry": false
    }
  ]
}
