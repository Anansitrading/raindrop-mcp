{
    "name": "raindrop-mcp",
    "module": "src/index.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "start": "bun run src/index.ts",
        "dev": "bun --watch run src/index.ts",
        "watch": "npx @modelcontextprotocol/inspector bun run src/index.ts",
        "type-check": "tsc --noEmit",
        "test": "node --loader vitest/vitest.mjs",
        "test:coverage": "node --loader vitest/vitest.mjs run --coverage",
        "build": "bun build src/index.ts --outfile build/index.js && chmod +x build/index.js",
        "node run": "node -r dotenv/config build/index.js"
    },
    "dependencies": {
        "axios": "^1.8.4",
        "dotenv": "^16.4.7",
        "esm": "^3.2.25",
        "rate-limiter-flexible": "^6.2.1",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@modelcontextprotocol/sdk": "^1.7.0",
        "@types/bun": "latest",
        "@types/express": "^5.0.1",
        "@vitest/coverage-v8": "^3.0.9",
        "typescript": "^5.8.2",
        "vitest": "^3.0.9"
    }
}
