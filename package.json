{
    "name": "@adeze/raindrop-mcp",
    "version": "1.0.8",
    "description": "MCP Server for Raindrop.io",
    "main": "index.js",
    "module": "src/index.ts",
    "type": "module",
    "bin": {
        "raindrop-mcp": "./build/cli.js"
    },
    "files": [
        "dist",
        "build",
        "cli.js"
    ],
    "private": false,
    "scripts": {
        "dev": "bun --watch src/index.ts",
        "dev:http": "bun --watch src/http-server.ts",
        "inspector": "npx @modelcontextprotocol/inspector bun run src/index.ts",
        "inspector:http": "npx @modelcontextprotocol/inspector bun run src/http-server.ts",
        "type-check": "tsc --noEmit",
        "test": "bun test",
        "test:coverage": "bun test --coverage",
        "test:http": "bun run src/test-client.ts",
        "run build": "bun run build/index.js",
        "build": "bun build --target=node --format=esm --outdir=build ./src/index.ts ./src/cli.ts ./src/http-server.ts ./src/test-client.ts",
        "start": "bun run src/index.ts",
        "start:http": "bun run src/http-server.ts",
        "start:sse": "bun run src/sse.ts",
        "health": "curl -s http://localhost:3001/health | jq",
        "debug": "bun run inspector",
        "debug:http": "bun run inspector:http",
        "clean": "rm -rf build",
        "prebuild": "bun run clean",
        "mcp": "bun run src/index.js",
        "bump:patch": "npm version patch",
        "bump:minor": "npm version minor",
        "bump:major": "npm version major"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/adeze/raindrop-mcp.git"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    },
    "keywords": [
        "mcp",
        "raindrop.io",
        "modelcontextprotocol",
        "mcp-server",
        "raindrop"
    ],
    "author": "Adam E",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/adeze/raindrop-mcp/issues"
    },
    "homepage": "https://github.com/adeze/raindrop-mcp#readme",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.12.1",
        "axios": "^1.9.0",
        "dotenv": "^16.5.0",
        "esm": "^3.2.25",
        "express": "^5.1.0",
        "rate-limiter-flexible": "^6.2.1",
        "zod": "^3.25.58",
        "zod-to-json-schema": "^3.24.5"
    },
    "devDependencies": {
        "@modelcontextprotocol/inspector": "^0.12.0",
        "@types/bun": "^1.2.15",
        "@types/express": "^5.0.3",
        "@types/node": "^20.19.0",
        "@vitest/coverage-v8": "^3.2.3",
        "typescript": "^5.8.3",
        "vitest": "^3.2.3"
    },
    "engines": {
        "bun": ">=0.0.91"
    }
}