{
    "name": "raindrop-mcp",
    "module": "src/index.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "bun --watch src/index.ts",
        "inspector": "npx @modelcontextprotocol/inspector bun run src/index.ts",
        "type-check": "tsc --noEmit",
        "test": "bun test",
        "test:coverage": "bun test --coverage",
        "run": "bun run build/index.js",
        "build": "bun build src/index.ts --outfile=build/index.js",
        "start": "bun run src/index.ts",
        "debug": "bun run inspector",
        "clean": "rm -rf build",
        "prebuild": "bun run clean",
        "start:http": "TRANSPORT_TYPE=http bun run src/index.ts",
        "http": "TRANSPORT_TYPE=http bun run src/index.ts"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.8.0",
        "axios": "^1.8.4",
        "dotenv": "^16.4.7",
        "esm": "^3.2.25",
        "rate-limiter-flexible": "^6.2.1",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@modelcontextprotocol/inspector": "latest",
        "@types/bun": "latest",
        "@types/node": "^20.17.30",
        "@vitest/coverage-v8": "^3.1.1",
        "typescript": "^5.8.3",
        "vitest": "^3.1.1"
    }
}
