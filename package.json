{
    "name": "@adeze/raindrop-mcp",
    "version": "2.0.2",
    "description": "Optimized MCP Server for Raindrop.io with enhanced AI-friendly tools and refactored service layer",
    "main": "build/index.js",
    "module": "build/index.js",
    "type": "module",
    "bin": {
        "raindrop-mcp": "./build/index.js"
    },
    "files": [
        "build"
    ],
    "private": false,
    "scripts": {
        "dev": "bun --watch src/index.ts",
        "dev:http": "bun --watch src/http-server.ts",
        "inspector": "npx @modelcontextprotocol/inspector bun run src/index.ts",
        "inspector:http": "npx @modelcontextprotocol/inspector http://localhost:3000/mcp",
        "inspector:http-server": "npx @modelcontextprotocol/inspector bun run src/http-server.ts",
        "type-check": "tsc --noEmit",
        "test": "bun test",
        "test:coverage": "bun test --coverage",
        "test:all": "bun run tests/index.ts",
        "test:http": "bun run tests/test-client.ts",
        "test:server": "bun run tests/test-server.ts",
        "test:comparison": "bun run tests/test-comparison.ts",
        "test:demo": "bun run tests/optimization-demo.ts",
        "run": "bun run build/src/index.js",
        "build": "bun build --target=node --format=esm --outdir=build ./src/index.ts ./src/http-server.ts",
        "start": "bun run src/index.ts",
        "start:http": "bun run src/http-server.ts",
        "health:http": "curl -s http://localhost:3001/health | jq",
        "clean": "rm -rf build",
        "prebuild": "bun run clean",
        "bump:patch": "npm version patch",
        "bump:minor": "npm version minor",
        "bump:major": "npm version major",
        "bun:update": "bun update",
        "dxt:pack": "npx @anthropic-ai/dxt@latest pack"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/adeze/raindrop-mcp.git"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    },
    "keywords": [
        "mcp",
        "raindrop.io",
        "modelcontextprotocol",
        "mcp-server",
        "raindrop",
        "bookmarks",
        "ai-assistant",
        "llm-tools",
        "typescript"
    ],
    "author": "Adam E",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/adeze/raindrop-mcp/issues"
    },
    "homepage": "https://github.com/adeze/raindrop-mcp#readme",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.17.0",
        "axios": "^1.11.0",
        "dotenv": "^17.2.1",
        "esm": "^3.2.25",
        "express": "^5.1.0",
        "rate-limiter-flexible": "^7.2.0",
        "zod": "^4.0.13",
        "zod-to-json-schema": "^3.24.6"
    },
    "devDependencies": {
        "@modelcontextprotocol/inspector": "^0.16.2",
        "@types/bun": "^1.2.19",
        "@types/express": "^5.0.3",
        "@types/node": "^24.1.0",
        "@vitest/coverage-v8": "^3.2.4",
        "typescript": "^5.8.3",
        "vitest": "^3.2.4"
    },
    "engines": {
        "bun": "^0.0.91"
    }
}