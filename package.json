{
    "name": "raindrop-mcp",
    "module": "src/index.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "watch": "node --watch run src/index.ts",
        "inspector": "npx @modelcontextprotocol/inspector bun run src/index.ts",
        "type-check": "tsc --noEmit",
        "test": "node --loader vitest/vitest.mjs",
        "test:coverage": "node --loader vitest/vitest.mjs run --coverage",
        "run": "node -r dotenv/config build/index.js",
        "build": "bun build src/index.ts --outfile=build/index.js",
        "start": "bun run src/index.ts",
        "debug": "npm run inspector",
        "clean": "rm -rf build",
        "prebuild": "npm run clean"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.8.0",
        "axios": "^1.8.4",
        "dotenv": "^16.4.7",
        "esm": "^3.2.25",
        "fastmcp": "^1.20.5",
        "rate-limiter-flexible": "^6.2.1",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/express": "^5.0.1",
        "@vitest/coverage-v8": "^3.0.9",
        "typescript": "^5.8.2",
        "vitest": "^3.0.9",
        "@types/node": "^20.17.28"
    }
}