{
    "name": "raindrop-mcp",
    "module": "src/index.ts",
    "type": "module",
    "bin": {
        "raindrop-mcp": "dist/index.js"
    },
    "files": [
        "dist"
    ],
    "private": true,
    "scripts": {
        "dev": "bun --watch src/index.ts",
        "inspector": "npx @modelcontextprotocol/inspector bun run src/index.ts",
        "type-check": "tsc --noEmit",
        "test": "bun test",
        "test:coverage": "bun test --coverage",
        "run build": "bun run build/index.js",
        "build": "bun build --target=node --format=esm --outdir=build ./src/index.ts",
        "start src": "bun run src/index.ts",
        "debug": "bun run inspector",
        "clean": "rm -rf build",
        "prebuild": "bun run clean",
        "start:http": "bun run src/sse.ts",
        "mcp": "bun run src/index.js"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "latest",
        "axios": "^1.8.4",
        "dotenv": "^16.4.7",
        "esm": "^3.2.25",
        "express": "^5.1.0",
        "rate-limiter-flexible": "^6.2.1",
        "zod": "^3.24.2",
        "zod-to-json-schema": "^3.24.5"
    },
    "devDependencies": {
        "@modelcontextprotocol/inspector": "latest",
        "@types/bun": "latest",
        "@types/express": "^5.0.1",
        "@types/node": "^20.17.30",
        "@vitest/coverage-v8": "^3.1.1",
        "typescript": "^5.8.3",
        "vitest": "^3.1.1"
    }
}
